<h1>Director #<%= @director.id %> details</h1>
<a href="/directors">Go back</a>
<hr>
<dl>
  <dt>Name</dt>
  <dd><%= @director.name %></dd>
  <dt>Dob</dt>
  <dd><%= @director.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @director.bio %></dd>
  <dt>Image</dt>
  <dd><img src="<%= @director.image %>"</dd>
  <dt>Created at</dt>
  <dd><%= @director.created_at %></dd>
  <dt>Updated at</dt>
  <dd><%= @director.updated_at %></dd>
</dl>
<hr>
<h1>Filmography</h1>

<% match = Movie.where({ :director_id => @director.id}) %>
<% match.each do |a_movie| %>
  <table border="3">
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Title</th>
      <th>Year</th>
      <th>Director</th>
      <th></th>
    </tr>
    <tr>
      <td> <%= a_movie.id %> </td>
      <td> <img src="<%= a_movie.image %>" </td>
      <td> <%= a_movie.title %> </td>
      <td> <%= a_movie.year %> </td>
      <td> <%= @director.name %> </td>
      <td> <a href="/movies/<%= a_movie.id %>">Show details</a></td>
    </tr>
  </table>
<% end %>
