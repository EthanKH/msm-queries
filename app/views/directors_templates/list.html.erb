<h1>List of all directors</h1>

<% Director.all.each do |a_director| %>
  <table border="3">
    <tr>
      <th>ID</th>
      <th>Image</th>
      <th>Name</th>
      <th>DoB</th>
      <th></th>
    </tr>
    <tr>
      <td> <%= a_director.id %> </td>
      <td> <img src="<%= a_director.image %>" </td>
      <td> <%= a_director.name %> </td>
      <td> <%= a_director.dob %> </td>
      <td> <a href="/directors/<%= a_director.id %>">Show details</a></td>
    </tr>
  </table>
<% end %>
